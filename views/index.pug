extends layout

block content
    .container-fluid
        // Miner info
        #minerInfo
            h1.display-5.text-center= title
            div.table-responsive
                table.table.table-bordered.table-striped.table-sm.table-inverse
                    thead
                        th Name
                        th Host
                        th Uptime
                        th ETH/ETC&nbsp;Stats
                        th Secondary Coin&nbsp;Stats
                        if hashrates
                            th ETH/ETC&nbsp;HR
                            th Secondary Coin&nbsp;HR
                        th Temp:Fan
                        th Pools
                        th Ver
                        th Comments
                        th Hard Reset
                    tbody
        .row
            #bittrex_balance.col-sm-8
                h3.text-center Bittrex Balance
                div.table-responsive
                    table.table.table-bordered.table-striped.table.sm.table-inverse
                        thead
                            th Coin
                            th Balance
                            th BTC Value
                            th Rate
                            th USD
                        tbody
            #USDT_stats.col-sm-2
                h3.text-center Stats
                ul.list-group
            #mining_estimator.col-sm-2
                h3.text-center Estimator
                ul.list-group
        p#minerSummary
        p#lastUpdated
    script(src='/javascripts/monitor.js')
        // /Miner info
    // /Wrapper
