extends layout

block content
    .container-fluid
        .row
            #BTCmarketTable.col-md-4.col-xs-12
                h2.text-center BTC-Market
                table.table.table-striped.table-sm.table-bordered.table-inverse
                    thead
                        th Market
                        th Bid(I'm selling to)
                        th Ask(I'm buying from)
                        th Volume
                    tbody
            #ETHmarketTable.col-md-4.col-xs-12
                h2.text-center ETH-Market
                table.table.table-striped.table-sm.table-bordered.table-inverse
                    thead
                        th Market
                        th Bid(I'm selling to)
                        th Ask(I'm buying from)
                        th Volume
                    tbody
            #BTCETHProfit.col-md-2.col-xs-12
                h2.text-center BTC-ETH
                table.table.table-striped.table-sm.table-bordered.table-inverse
                    thead
                        th Market
                        th BTC -> ETH
                    tbody
            #ETHBTCProfit.col-md-2.col-xs-12
                h2.text-center ETH-BTC
                table.table.table-striped.table-sm.table-bordered.table-inverse
                    thead
                        th Market
                        th ETH -> BTC
                    tbody

