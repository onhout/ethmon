extends layout

block content
    .container-fluid
        .row
            #PoloBalance.col-md-4
                h4.text-center Balances
                table.table.table-striped.table-sm.table-bordered.table-hover.table-inverse
                    thead
                        th Market
                        th Available
                        th On Orders
                        th Est (mBTC)
                    tbody
            #Orders.col-md-8
                h4.text-center Orders
                div.table-responsive
                    table.table.table-striped.table-sm.table-bordered.table-hover.table-inverse
                        thead
                            th Order #
                            th Name
                            th Date
                            th Rate
                            th Type
                            th Amount
                            th Total
                            th Cancel
                        tbody
        h4.text-center Market (mBTC)

        div.container.text-center
            div.form-check.form-check-inline
                label.form-check-label
                    input.form-check-input(type="radio" name="radioOptions" checked id="inlineRadio25" value="0.25")
                    span 25%
            div.form-check.form-check-inline
                label.form-check-label
                    input.form-check-input(type="radio" name="radioOptions" id="inlineRadio50" value="0.5")
                    span 50%
            div.form-check.form-check-inline
                label.form-check-label
                    input.form-check-input(type="radio" name="radioOptions" id="inlineRadio100" value="1")
                    span 100%
            p#calculatedBTC

        .row
            #BTCmarketTable.col-12
                div.table-responsive
                    table.table.table-striped.table-sm.table-bordered.table-hover.table-inverse
                        thead
                            th Market
                            th Last
                            th Low
                            th High
                            th 1%
                            th Threshold
                            th Range
                            th Actions
                        tbody

        #Graphs

    script(src="/javascripts/alert.js")
    script(src="/javascripts/graphs.js")
    script(src="/javascripts/poloniex.js")
